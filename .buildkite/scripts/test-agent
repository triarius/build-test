#!/usr/bin/env bash

set -Euxo pipefail

buildktie-agent --help
buildkite-agent --version

buildkite-agent annotate "Hello ğŸ‘‹ from the buildkite-agent bootstrap script"
buildkite-agent annotation remove
buildkite-agent artifact upload .buildkite/scripts
buildkite-agent artifact download .buildkite/scripts tmp/scripts
ls -lA tmp/scripts
buildkite-agent artifact search .buildkite/scripts/test-agent
buildkite-agent artifact shasum .buildkite/scripts/jwt
buildkite-agent artifact download README.md /tmp/README.md

buildkite-agent meta-data set hello <<<"Hello ğŸ‘‹ from the buildkite-agent bootstrap script"
buildkite-agent meta-data get hello
buildkite-agent step get --step token
